{
  "compilerOptions": {
    "lib": [ "es2021", "es7", "es6", "dom" ],
    "module": "commonjs",
    
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",

    "noUnusedLocals": true
  }
}